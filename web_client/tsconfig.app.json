{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",  
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",  
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
